{% extends 'layout.twig' %}

	{% block title %}
		{{ category ? category.name : 'Tous les articles du blog' }} 
	{% endblock title %}
	
{% block content %}

	<h1 class="text-center container-fluid"> 
	{{ category ? category.name : 'Tous les articles du blog' }} 
	</h1>

	<div>
		{% for post in posts %}
				<div>
					<h2> {{ post.title }} </h2> 
					<h2> {{ post.category }} </h2> 

					écrit le {{ post.create_date }} par 
					{{ post.user }}  et modifié le {{ post.last_update }} 
					<p> {{ post.chapo }} </p>
					
					<p> <img src="{{ '../var/media/photo/' ~ post.picture  ~ '.jpg' }}" alt=""> </p> <br/>
					<a href="index.php?p=single&id={{ post.id }}">Lien vers l'article' </a> 
				</div> 
			<br/><br/>
		{% endfor %}
	</div>

	<br/><br/><br/><br/>

	<div>
		{% for i in 1..max_page %}

			{% if i == actual_page %}
				PAGE {{i}} 
			{% elseif category %}
				<a href="index.php?p=category&id={{category.id}}&page={{i}}"> Page {{i}}</a>
			{% else %}
				<a href="index.php?p=post&page={{i}}"> Page {{i}} </a>
			{% endif %}

		{% endfor %}
	</div>
{% endblock content %}