{% extends 'layout.twig' %}

	{% block title %}
		Editer mon profil
	{% endblock title %}

	{% block h1 %}
		Administrer vos articles 
	{% endblock h1 %}

{% block content %}

<div class="container-fluid text-center">


	<h2>Bienvenue {{ user.name }} </h2>
	<h1>Editer votre profil </h1>
	<div>
		<br/><br/>
		<form method="post">

			<label for="nameUpdate"> Changer mon nom </label><br/>
			<input type="text" name="nameUpdate" id="nameUpdate" value=" {{ user.name }}"/><br/><br/>

			<label for="passwordUpdate"> Changer mon mot de passe</label><br/>
