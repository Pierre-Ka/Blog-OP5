			<input type="submit" value="Sauvegarder les modifications"/>
		</form>
	</div>
	<h1>Editer votre photo de profil </h1>
	<p> <img src="<?= '../var/media/photo/ {{ user.picture }}' ; ?>" alt="sans ext"> </p>
		
		<form method="post" action="index.php?p=user.edit&id= {{ user.id }}" enctype="multipart/form-data">
			<label> Changer ma photo de profil : <br />
			<input type="file" name="pictureUpdate" /><br /> </label><br/>
			<input class="btn btn-primary" type="submit"/><br/><br/>
		</form>
</div>

<br/><br/>

{% endblock content %}



