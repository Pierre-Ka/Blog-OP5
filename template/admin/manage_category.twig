{% extends 'layout.twig' %}

	{% block title %}
		Manage categories
	{% endblock title %}

{% block content %}

<div class="text-center">
	<br/><br/>
	<h1> Administrer les categories</h1>
	<br/><br/>
	<p> 
		<a href="admin.home" class="btn-lg btn-success">Retour Ã  l'interface d'administration</a>
	</p>
</div>
<br/><br/>
<table class="table">
	<thead>
		<tr>
			<td>Id</td>
			<td>Nom</td>
			<td>Editer</td>
			<td>Supprimer</td>
		</tr>
	</thead>
	
	<tbody>
		{% for categorie in categories %}
			<tr>
				<td>	{{categorie.id}} 	</td>
				<td>	{{categorie.name}} 	</td>
				<td>
					<form method="post" action="admin.manage_category&id={{categorie.id}} ">
						<input type="text" name="categoryEdit"/>
						<input class="btn btn-info" type="submit"/>
					</form>
				</td>
				<td>
					<form method="post">
						<input type="hidden" name="admin_category_delete" value="{{categorie.id}} "/>
						<button type="submit" class="btn btn-danger">Supprimer la categorie</button>
					</form> 
				</td>
			</tr>
		{% endfor %}
		<tr>
			<td></td>
			<td>Creer une nouvelle categorie
			<form method="post">
						<input type="text" name="categoryCreate"/>
						<input class="btn btn-info" type="submit" value="Creer"/>
			</form></td>
			<td></td>
			<td></td>
		</tr>
	</tbody>
</table>
<br/><br/><br/><br/><br/>

{% endblock content %}
